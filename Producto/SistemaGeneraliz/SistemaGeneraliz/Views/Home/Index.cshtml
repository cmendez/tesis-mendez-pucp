</p>
</text>);
    items.Add()
        .Text("Contacto")
        .Content(@<text>
<p style="padding: 0 1em">
    Si quieres comunicarte con el equipo desarrollador de este sistema, comuníquese con <a href="mailto:dlepage@pucp.pe">dlepage@pucp.pe</a>.
</p>
</text>);
})
