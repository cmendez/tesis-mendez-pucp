@{
    ViewBag.Title = "Registrar Usuario";
}
@{Html.RenderPartial("Titulo", new SistemaGeneraliz.Models.Helpers.PageTitle("Registrar Usuario", "Elija un tipo de usuario"));}
<br />
<ul>
    <li>
        <h5>@Html.ActionLink("Soy cliente natural", "RegistrarClienteNatural", "Clientes")</h5>
    </li>
    <li>
        <h5>@Html.ActionLink("Soy cliente jurídico", "RegistrarClienteJuridico", "Clientes")</h5>
    </li>
    <li>
        <h5>@Html.ActionLink("Soy proveedor natural", "RegistrarProveedorNatural", "Proveedores")</h5>
    </li>
    <li>
        <h5>@Html.ActionLink("Soy proveedor jurídico", "RegistrarProveedorJuridico", "Proveedores")</h5>
    </li>
    @if (WebSecurity.IsAuthenticated && Roles.IsUserInRole("Administrador"))
    {
        <li>
            <h5>@Html.ActionLink("Soy tienda/cadena de ferretería", "RegistrarSuministradorJuridico", "Suministradores")</h5>
        </li>
    }
    else
    {
        <li>
            <h5>@Html.ActionLink("Soy tienda/cadena de ferretería", "Contacto", "Suministradores")</h5>
        </li>
    }
</ul>
