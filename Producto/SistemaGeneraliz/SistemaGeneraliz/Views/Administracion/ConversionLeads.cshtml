@using SistemaGeneraliz.Models.Entities
@using SistemaGeneraliz.Models.ViewModels

@{
    ViewBag.Title = "Conversión de Leads";
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Conversión de Leads</title>
</head>
<body>
    @*    <script src="~/Scripts/jquery-1.8.2.min.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>*@
    @{Html.RenderPartial("Titulo", new SistemaGeneraliz.Models.Helpers.PageTitle("Conversión de Leads", "Reporte de efectividad de conversión de leads."));}
    <table style="width: 100%; border: 0;">
        <tbody>
            <tr>
                <td style="vertical-align: top; width: 45%; padding-left: 6%">
                    <table>
                        <tbody style="vertical-align: top;">
                            <tr>
                                <td>Fecha Inicio:</td>
                                <td>
                                    <input type="text" name="nombre" id="fechaInicio" maxlength="10" placeholder="dd/mm/aaaa">
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </td>
                <td style="vertical-align: top; width: 35%;">
                    <table style="width: auto; border: 0;">
                        <tbody style="vertical-align: top;">
                            <tr>
                                <td style="width: 10%;">Fecha Fin:</td>
                                <td style="width: 10%;">
                                    <input type="text" name="nombre" id="fechaFin" maxlength="10" placeholder="dd/mm/aaaa">
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </td>
                <td style="vertical-align: top; padding-top: 15px; width: 18%; padding-right: 7%;">
                    <button id="btnBuscar" type="submit" class="btn blue pull-right" style="width: 125%;">
                        Generar Reporte <i class="icon-search  m-icon-white"></i>
                    </button>
                </td>
            </tr>
        </tbody>
    </table>
    <br />
    <div class="portlet box green">
        <div class="portlet-title">
            <div class="caption"><i class="icon-reorder"></i>Reporte Consolidado</div>
            <div class="tools">
                <a href="javascript:;" class="collapse"></a>
            </div>
        </div>
        <div class="portlet-body">
            @(Html.Kendo().Grid<ConversionLeadsViewModel>()
                  .Name("Grid")
                  .Columns(columns =>
                    {
                        columns.Bound(p => p.Año);
                        columns.Bound(p => p.Mes);
                        columns.Bound(p => p.RazonSocial);
                        columns.Bound(p => p.ImagenPrincipal).Filterable(false).Template(@<text></text>).ClientTemplate("<img src='/Suministradores/GetImagen?imagenId=#=ImagenPrincipal#' alt='' width='146' height='106'>");
                        columns.Bound(p => p.LeadsMensuales);
                        columns.Bound(p => p.MontoRecargasLogradas);
                        columns.Bound(p => p.MontoComprasLogradas);
                        columns.Bound(p => p.TasaConversion);
                    })
                    .Resizable(resize => resize.Columns(true))
                    .Pageable(paper => paper.Refresh(true).PageSizes(true).Messages(m => m.ItemsPerPage("Elementos por página")))
                    .Sortable()
                    .Filterable()
                    .Groupable()
                    .DataSource(dataSource => dataSource
                        .Ajax()
                        .PageSize(5)
                        .ServerOperation(false)
                        .Read(read => read.Action("ReporteConversionLeads_Read", "Administracion").Data("additionalData"))
                    )
                    )
        </div>
    </div>

    @*    <div>
        @Html.ActionLink("Regresar", "RegistrarUsuario", "Usuarios")
    </div>*@

    <script>
        function additionalData() {
            return {
                fechaInicio: $("#fechaInicio").val(),
                fechaFin: $("#fechaFin").val()
            };
        }

        $("#btnBuscar").click(function () {
            if (($("#fechaInicio").val() != "") || ($("#fechaFin").val() != "")) {
                var finicio = parseDate($("#fechaInicio").val());
                var ffin = parseDate($("#fechaFin").val());
                alert(finicio.toString() + " " + ffin.toString());
                if ((finicio.toString() === "Invalid Date") || (ffin.toString() === "Invalid Date")) {
                    alert("Error: formato de fecha inválido. Ingrese bien ambas fechas");
                    return false;
                }
                if (ffin < finicio) {
                    alert("Error: la fecha inicio tiene que ser menor igual que la fecha fin.");
                    return false;
                }
            }

            $("#Grid").data("kendoGrid").dataSource.read();
            return true;
        });
        
        // parse a date in dd/mm/yyyy format
        function parseDate(input) {
            var parts = input.split('/');
            // new Date(year, month [, date [, hours[, minutes[, seconds[, ms]]]]])
            return new Date(parts[2], parts[1] - 1, parts[0]); // months are 0-based
        }

        $("#fechaInicio").kendoDatePicker({
            format: "dd/MM/yyyy"
        });

        $("#fechaFin").kendoDatePicker({
            format: "dd/MM/yyyy"
        });

    </script>

</body>
</html>
