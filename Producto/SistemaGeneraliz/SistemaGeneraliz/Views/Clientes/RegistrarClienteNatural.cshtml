@model SistemaGeneraliz.Models.ViewModels.ClienteNaturalViewModel

@{
    //Layout = null;
    ViewBag.Title = "Registrar Cliente Natural";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Registrar Cliente Natural</title>
    <script src="https://maps.googleapis.com/maps/api/js?v=3.exp&sensor=true"></script>
    <script src="~/Scripts/mi_mapa.js"></script>
</head>
<body>
    <script src="~/Scripts/jquery-1.8.2.min.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
    @{Html.RenderPartial("Titulo", new SistemaGeneraliz.Models.Helpers.PageTitle("Registrar Cliente Natural", "Por favor complete los siguientes campos."));}
    @using (Html.BeginForm())
    {
        @Html.ValidationSummary(true)
    
        //AVERIGUAR COMO LLAMAR A UNA VISTA PARCIAL QUE ESTA EN OTRA CARPETA DISTINTA DE SHARED
        //@{Html.RenderPartial("/Usuarios/RegistrarPersonaNatural", new SistemaGeneraliz.Models.Helpers.PageTitle("Registrar Cliente Natural", "Por favor complete los siguientes campos."));}
        
        <div style="width: auto;">
            <div class="row-fluid">
                <!-- contenedor superior izquierdo: campos -->

                <div class="span7">
                    @Html.Label("Datos Personales", new { style = "font-weight: bold; text-decoration: underline;" })

                    @* *************************************** ATRIBUTOS DE PERSONA **************************************@
                    <br />

                    @*@{Html.RenderPartial("~/Views/Usuarios/_RegistrarPersonaNatural.cshtml", new SistemaGeneraliz.Models.ViewModels.PersonaNaturalViewModel());}*@
                    @{Html.RenderPartial("~/Views/Usuarios/_RegistrarPersonaNatural.cshtml");}

                    <!--RenderPage("/Views/Usuarios/_RegistrarPersonaNatural.cshtml", new SistemaGeneraliz.Models.ViewModels.PersonaNaturalViewModel());-->

                    @* *************************************** ATRIBUTOS DE CUENTA **************************************@

                    <div class="row-fluid">
                        <div class="span5">
                            <div class="editor-label" style="width: 100%; text-align: left;">@Html.LabelFor(model => model.Password)</div>
                        </div>
                        <div class="span7">
                            <div class="editor-field" style="width: 100%; text-align: left;">
                                @Html.TextBoxFor(model => model.Password, new { @type = "password" })<br />
                                @Html.ValidationMessageFor(model => model.Password)
                            </div>
                        </div>
                    </div>

                    <div class="row-fluid">
                        <div class="span5">
                            <div class="editor-label" style="width: 100%; text-align: left;">@Html.LabelFor(model => model.ConfirmPassword)</div>
                        </div>
                        <div class="span7">
                            <div class="editor-field" style="width: 100%; text-align: left;">
                                @Html.TextBoxFor(model => model.ConfirmPassword, new { @type = "password" })<br />
                                @Html.ValidationMessageFor(model => model.ConfirmPassword)
                            </div>
                        </div>
                    </div>

                    <button id="btnGuardar" type="submit" class="btn green pull-right" style="margin-right: 22%;">
                        Guardar <i class="icon-ok-sign  m-icon-white"></i>
                    </button>
                </div>

            </div>
        </div>
    }

    <div>
        @Html.ActionLink("Regresar", "Index")
    </div>
    
    <script>
    $("#ver_mapa").click(function () {
        //alert("XD");
        $("#modal_mapa").attr('style', '');
    });
</script>
</body>
</html>
